<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="24dp">

    <com.youth.banner.Banner
        android:id="@+id/bannerAd"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingHorizontal="16dp"
        app:banner_indicator_gravity="center"
        app:banner_indicator_height="8dp"
        app:banner_indicator_normal_color="#FFFFFFFF"
        app:banner_indicator_radius="4dp"
        app:banner_indicator_selected_color="#FF33ee22"
        app:banner_indicator_space="4dp"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
